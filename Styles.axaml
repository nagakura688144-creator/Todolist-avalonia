<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- リソースはここ -->
  <Styles.Resources>
    <Color x:Key="AccentColor">#3B82F6</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <CornerRadius x:Key="RadiusM">12</CornerRadius>
    <CornerRadius x:Key="RadiusL">20</CornerRadius>
  </Styles.Resources>

  <!-- テキスト見出し -->
  <Style Selector="TextBlock.h1">
    <Setter Property="FontSize" Value="22"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
  </Style>

  <!-- ボタン（アクセント） -->
  <Style Selector="Button.accent">
    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="CornerRadius" Value="{StaticResource RadiusM}"/>
    <Setter Property="Padding" Value="12,8"/>
  </Style>

  <!-- Todoカード -->
  <Style Selector="Border.todo-card">
    <Setter Property="CornerRadius" Value="{StaticResource RadiusL}"/>
    <Setter Property="Padding" Value="12"/>
    <Setter Property="Margin" Value="0,6,0,6"/>
    <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}"/>
  </Style>

  <!-- 完了タイトル -->
  <Style Selector="TextBlock.todo-title-completed">
    <Setter Property="TextDecorations" Value="Strikethrough"/>
    <Setter Property="Opacity" Value="0.6"/>
  </Style>

  <!-- 期日Pill -->
  <Style Selector="Border.due-pill">
    <Setter Property="CornerRadius" Value="999"/>
    <Setter Property="Padding" Value="8,4"/>
    <Setter Property="Background" Value="#00000014"/>
  </Style>
  <Style Selector="Border.due-pill.overdue">
    <Setter Property="Background" Value="#EF444444"/>
    <!-- BorderにはForegroundが無いのでTextElement.Foregroundを使う -->
    <Setter Property="TextElement.Foreground" Value="White"/>
  </Style>

</Styles>
